@model GradeCalcModel

<h2>Grade Calculator</h2>
<form method="post">
    <label>Assignments: </label>
    <input id="Assignments" asp-for="Assignments" /><br />

    <label>Group Project: </label>
    <input id="GroupProject" asp-for="GroupProjects" /><br />

    <label>Quizes: </label>
    <input id="Quizes" asp-for="Quizes" /><br />

    <label>Exams: </label>
    <input id="Exams" asp-for="Exams" /><br />

    <label>Intex: </label>
    <input id="Intex" asp-for="Intex" /><br />

    <input id="calc" type="Submit" value="Calculate" />

    <div asp-validation-summary="All"></div>
</form>


